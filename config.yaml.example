# Main Configuration File
# Copy this to config.yaml and fill in your API keys

# LLM Provider Configuration
llm:
  provider: "gemini"  # Options: "gemini" or "perplexity"
  model: "gemini-2.5-flash"  # Available Gemini models:
                          # - "gemini-3-pro-preview" (most powerful, preview)
                          # - "gemini-3-flash-preview" (balanced, preview)
                          # - "gemini-2.5-pro" (stable, advanced thinking)
                          # - "gemini-2.5-flash" (stable, best price-performance)
                          # - "gemini-2.5-flash-lite" (fastest, cost-efficient)
                          # For Perplexity: "sonar-pro", "sonar"
  temperature: 0.7  # 0.0-1.0, higher = more creative
  max_tokens: 4000  # Maximum output length

# Search Provider Configuration
search:
  provider: "exa"  # Options: "exa", "google", or "crewai" (uses CrewAI's EXASearchTool)
  max_results: 10  # Number of search results to use
  include_domains: []  # Optional: restrict to specific domains
                       # Example: ["nature.com", "science.org"]

# Article Generation Settings
article:
  media_type: "research_magazine"  # From tones.yaml: scientific_journal, research_magazine, tech_news, academic_news
  length: "medium"  # Options: "short" (500-800 words), "medium" (1000-1500 words), "long" (2000+ words)
  include_sources: true  # Include source citations
  fact_check: true  # Enable fact-checking (requires additional API calls)

# Output Configuration
output:
  format: "markdown"  # Currently only markdown supported
  directory: "./outputs"  # Where to save articles
  filename_template: "{date}_{topic}_{media_type}.md"  # Template for filenames
                                                       # Variables: {date}, {topic}, {media_type}

# Humanizer Configuration
humanizer:
  enabled: true  # Toggle humanization on/off
  passes: 2  # Number of refinement passes (1-3, higher = better quality but slower)
  intensity: "medium"  # Intensity level: "low", "medium", or "high"

# API Keys: Set these in .env file (see .env.example)
# Do NOT store API keys in this file!
